@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signinManager

<ul class="navbar-nav ms-auto">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
                Hello @(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserlastName").Value)
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" asp-controller="Main" asp-action="Profile">Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="Main" asp-action="Logout">Logout</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Change Password</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-success me-2" asp-controller="Main" asp-action="Register">Register</a>
            <a class="btn btn-outline-primary" asp-controller="Main" asp-action="Login">Login</a>
        </li>
    }
</ul>
        