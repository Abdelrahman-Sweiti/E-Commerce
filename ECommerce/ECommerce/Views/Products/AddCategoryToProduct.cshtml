@model ECommerce.Models.ProductsCategory

@{
    ViewData["Title"] = "AddCategoryToProduct";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>AddCategoryToProduct</h1>



            <form asp-action="AddCategoryToProduct" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input hidden asp-for="ProductId" />
            </div>


    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
        </form>
