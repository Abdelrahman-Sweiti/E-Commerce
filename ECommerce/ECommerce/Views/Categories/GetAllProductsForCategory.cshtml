@model List<ECommerce.Models.ProductsCategory>

@{
    ViewData["Title"] = "GetAllProductsForCategory";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link rel="stylesheet" href="~/css/CardStyling.css" />
<link rel="stylesheet" href="~/css/ProdToCategory.css" />

<style>
    .filter-container {
        text-align: center;
        margin-top: 20px;
    }

    .filter-buttons .btn {
        margin: 5px;
    }

    .product-card {
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <h1 class="text-center mt-5">@ViewData["CategoryName"] Products</h1>

    <div class="filter-container">
        <h2 class="mt-3">Sort products:</h2>
        <div class="filter-buttons">
            <a asp-controller="Products" asp-action="FilterProductsByCategory" asp-route-categoryId="@Model.FirstOrDefault()?.category.Id" asp-route-filter="HighToLowPrice" class="btn btn-secondary">High to Low Price</a>
            <a asp-controller="Products" asp-action="FilterProductsByCategory" asp-route-categoryId="@Model.FirstOrDefault()?.category.Id" asp-route-filter="LowToHighPrice" class="btn btn-secondary">Low to High Price</a>
            <a asp-controller="Products" asp-action="FilterProductsByCategory" asp-route-categoryId="@Model.FirstOrDefault()?.category.Id" asp-route-filter="OrderByAlphaBetAsend" class="btn btn-secondary">A to Z</a>
            <a asp-controller="Products" asp-action="FilterProductsByCategory" asp-route-categoryId="@Model.FirstOrDefault()?.category.Id" asp-route-filter="OrderByAlphaBetDesend" class="btn btn-secondary">Z to A</a>
        </div>
    </div>

    <div class="row mx-auto">
        @foreach (var productCategory in Model)
        {
            <div class="col-md-3 product-card">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@productCategory.product.Id" class="card-link">
                    <div class="card mb-4 border border-5 border-dark CStyle">
                        @if (productCategory.product.ImageUri != null)
                        {
                            <img src="@productCategory.product.ImageUri" class="card-img-top" alt="@productCategory.product.ProductName" width="200" height="200">
                        }
                        else
                        {
                            <p class="card-text">No Image Available</p>
                        }
                        <div class="card-body bg-">
                            <h5 class="card-title">@productCategory.product.ProductName</h5>
                            <p class="card-text">@productCategory.product.Description</p>
                            <p class="card-text">$@productCategory.product.Price</p>
                            <div class="btn-group" role="group">
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@productCategory.product.Id" class="btn btn-primary ms-2">Edit</a>
                                    <a asp-controller="Products"  asp-action="Delete" asp-route-id="@productCategory.product.Id" class="btn btn-danger ms-2">Delete</a>
                                }
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form method="post" asp-controller="Products" asp-action="AddToCart" class="ms-2">
                                        <input type="hidden" name="productId" value="@productCategory.product.Id" />
                                        <button type="submit" class="btn btn-success">Add to Cart</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    }
</div>
